    "setup:telegram": "node scripts/setup-telegram-bot.js",
    "setup:mini-app": "node scripts/setup-telegram-mini-app.js",
    "test:mini-app": "node scripts/test-mini-app.js",
    "setup:production": "node scripts/setup-production.js"
  },
  "dependencies": {
    "@twa-dev/sdk": "^8.0.2",
    "dotenv": "^17.2.1",
    "gtag": "^1.0.1",
    "next": "14.0.4",
    "node-telegram-bot-api": "^0.64.0",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/node-telegram-bot-api": "^0.64.0",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "postcss": "^8",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
