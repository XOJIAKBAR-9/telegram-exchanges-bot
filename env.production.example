# Production Environment Variables for Telegram Bot Template
# Copy this file to .env.production and fill in your values

# Telegram Bot Configuration (PRODUCTION)
TELEGRAM_BOT_TOKEN=your_production_telegram_bot_token_here

# Next.js Configuration
NEXTAUTH_URL=https://your-production-domain.com
NEXTAUTH_SECRET=your_production_nextauth_secret_here

# Production App Configuration
NEXT_PUBLIC_APP_URL=https://your-production-domain.com
NEXT_PUBLIC_APP_NAME=Your Bot Name Production

# Optional: Analytics and Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id_here
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# Optional: Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Optional: Security
CORS_ORIGIN=https://your-production-domain.com

# Add your production-specific environment variables here
# CUSTOM_API_KEY=your_production_api_key_here
# DATABASE_URL=your_production_database_url_here 